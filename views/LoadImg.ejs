<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>Thiepnvph18870</title>
    <script>
        function btnUpdate() {
            document.getElementById("actionform").action = "/UpdateImage"
        }
        function btnDelete() {
            document.getElementById("actionform").action = "/index"
        }
    </script>
</head>
<body class="container">
    <div class="container">
        <form id="actionform" style="margin-top: 2%" method="post" action="" enctype="application/x-www-form-urlencoded">
            <div style="width: 100%; text-align: center">
                <img style="margin: 1%" src="<%=data[0].link%>" width="50%">
            </div>
            <p></p>
            <div class="row" hidden>
                <label class="col-md-4">Link Image</label><br>
                <input readonly name="linkImg" class="form-control" value="<%=data[0].link%>">
            </div>
            <div class="row">
                <label class="col-md-4">ID</label><br>
                <input readonly name="idImg" class="form-control" value="<%=data[0]._id%>">
            </div>
            <div class="row">
                <label class="col-md-4">Tiêu Đề</label><br>
                <input name="titleImg" class="form-control" value="<%=data[0].title%>">
            </div>
            <div class="row">
                <label class="col-md-4">Ngày Tạo</label><br>
                <input readonly name="dateImg" class="form-control" value="<%=data[0].dateImage%>">
            </div>
            <div class="row" style="margin-bottom: 10px">
                <label class="col-md-4">Mô Tả</label><br>
                <input name="motaImg" class="form-control" value="<%=data[0].mt%>">
            </div>
            <div style="float: left; width: 50%">
                <button onclick="btnUpdate()" type="submit" class="form-control btn btn-outline-danger align-items-center">Update</button>
            </div>
            <div style="float: right; width: 50%">
                <button onclick="btnDelete()" type="submit" class="form-control btn btn-outline-danger align-items-center">Delete</button>
            </div>
        </form>
    </div>
</body>
</html>